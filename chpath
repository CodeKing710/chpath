#!/bin/bash

version="chpath - v1.0.0"
help=""

# chpath's Functions and Variables

# Vars
__cwd=`pwd`
prgroot="$HOME/.chpath"

# Funcs
__args() {
  # Process args
  while [[ "$1" =~ '-' ]]; do
    # ALL CASE STATEMENT OPTIONS SHOULD END WITH 'exit;;' in this function!!
    case "$1" in
      -h | --help )
        cat $prgroot/help
        exit;;
      -v | --version )
        cat $prgroot/version
        exit;;
      * ) # Catch-all
        cat $prgroot/help | head -1
        echo "\"$1\" is not an argument!"
        exit;;
    esac
  shift; done
}
# chpath's main code

repo=`find $HOME -type d -name chpath`

__chpath() {
  [ -z "" ] && args -h || __args $@
  # Write your app's main flow here (General stub supports arg handling)
}

__chpath $@

# Cleanup for accidental sourcing
unset __chpath __args __cwd repo
unset version help
